{
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": true,
    "isolatedModules": true,
    "lib": ["ES2024"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "lib",
    "paths": {
      "src": ["src"]
    },
    "target": "ES2024"
  },
  "exclude": ["lib*/**/*"],
  "extends": "./tsconfig.base.json"
}
